<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="all.oopproject.poros.U1g1Controler">
    <children>
        <Label fx:id="statusLabel" layoutX="14" layoutY="14" text="Status: Not logged in" />

        <Button fx:id="btnLoadSchedule" layoutX="14" layoutY="50" onAction="#loadDailySchedule" text="Daily Delivery Schedule" />

        <TableView fx:id="ordersTable" layoutX="14" layoutY="100" prefHeight="250" prefWidth="570">
            <columns>
                <TableColumn fx:id="locationColumn" prefWidth="285" text="Location" />
                <TableColumn fx:id="quantityColumn" prefWidth="285" text="Quantity (Liters)" />
            </columns>
        </TableView>
      <TextField fx:id="LocationTF" layoutX="171.0" layoutY="19.0" text="Location" />
      <TextField fx:id="QuantityTF" layoutX="351.0" layoutY="19.0" text="Quantity (Liters)" />
      <Button layoutX="300.0" layoutY="63.0" onAction="#SubmitButtonOA" text="Submit" />
    </children>
</AnchorPane>
